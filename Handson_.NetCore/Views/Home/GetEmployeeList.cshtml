@model List<Employee>
@{
    ViewBag.Title = "Employee List";
}


@foreach (var employee in Model)
{
<div class="row">

    @if (employee.isPermanent == true)
    {
        <div class="col-md-4 text-primary">
            <h1>
                @employee.Name
            </h1>
        </div>

        <div class="col-md-4  text-primary">
            <h1>
                @employee.Salary
            </h1>
        </div>
    }

    else
    {

        <div class="col-md-4">
            @employee.Name
        </div>

        <div class="col-md-4">
            @employee.Salary
        </div>

    }
</div>
}

